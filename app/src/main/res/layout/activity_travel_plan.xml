<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.antoine.retrofitest.travel_plan"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/my_travel_plans"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="My travel plan"
                android:gravity="center"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/pdf_plan"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="PDF PLAN"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/border" />

            <ImageView
                android:id="@+id/testCrop"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/my_travel_plans"/>

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="80dp">
            </WebView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
